{
    "compilerOptions": {
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowJs": true,
        // paths
        "baseUrl": "./",
        "paths": {
        },
        "typeRoots": [
            "./declare"
        ]
    }
}
